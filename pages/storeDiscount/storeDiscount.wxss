/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
.sort_box{
	width:95%;
	height:100%;
	margin:20rpx auto;
	border-radius:10rpx;
	background:#fff;
	padding:20rpx 0;
}
.sort_cont{
	width:100%;
	height:172rpx;
	
}
.sort_left{
	width:100%;
	height:172rpx;
	background:#fff3f2;
	border-radius:20rpx;
}
.sort_right{
	width:28%;
	height:172rpx;
	background:#fff3f2;
	border-radius:20rpx;
	border-left:dashed 1px #e83632;
}
.sort_in{
	width:90%;
	height:120rpx;
	margin:0 auto;
	border-radius:10rpx;
}
.sort_img{
	width:30%;
	display:flex;
	align-items:center;
}
.sort_img image{
	width:120rpx;
	height:120rpx;
	border-radius:10rpx;
}
.sort_txt{
	width:70%;
}
.sort_txt text{
	font-size:50rpx;
}
.submit_info{
	width:110rpx;
	height:48rpx;
	line-height:48rpx;
	font-size:24rpx;
	margin:0 auto;
}
.sort_cont{
	margin-top:20rpx;
}
.sort_txt .text1{
	height:40%;
}
.sort_txt .text2{
	height:30%;
}
.sort_txt .text3{
	height:30%;
}
.stroe image{
	width:40rpx;
	height:36rpx;
	margin-right:20rpx;
}