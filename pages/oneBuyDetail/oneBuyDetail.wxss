/**detail.wxss**/
@import "../../wxParse/wxParse.wxss"; 
.banner image{
	width:100%;
	height:420rpx;
}
.product_name{
	font-size:32rpx;
}
.product_top{
	padding:20rpx 35rpx 35rpx;
	border-bottom:solid 1px #ececec;
}
.name_share image{
	width:35rpx;
	height:35rpx;

}
.name_share{
	height:40rpx;
	line-height:40rpx;
}
.guarantee{
	width:265rpx;
	font-size:20rpx;
	color:#999;
	margin:20rpx 0rpx 35rpx;
}
.sale{
	font-size:26rpx;
	color:#5b5b5b;
	padding-top:5rpx;
}
.next_page image{
	width:11rpx;
	height:20rpx;
}
.progress{
	border-radius: 20rpx;
	overflow: hidden;
	margin-top: 10rpx;
}
.detail_cont{
	border-radius: 20rpx;
	background: #f2f2f2;
	line-height: 40rpx;
	padding:3%;
}
.buy{
	width:100%;
	height:82rpx;
	line-height:82rpx;
	text-align: center;
	position: fixed;
	bottom:0;
}
.reward_status{
	padding-top:20rpx;
	padding-bottom:20rpx;
}
.infor_list{
	height:78rpx;
	border-bottom:solid 1px #e0e0e0;
}
.infor_list .input_before{
	width:16%;
}
.infor_list input{
	padding:2% 0;
	width:80%;
	height:78rpx;
	line-height:78rpx;
	font-size:28rpx;
	color:#666;
}
.submit_info{
	margin:30rpx auto;
	width:50%;
	height:70rpx;
	line-height:70rpx;
}