<!--login.wxml-->
<view class="login">
  <view class="user_img">
    <open-data type="userAvatarUrl"></open-data>
  </view>
</view>
<view id="login">
  <view class="login_input flexRowBetween">
    <view class="input_img">
      <image src="/images/login1.png"></image>
    </view>
     <view class="input_in">
      <input placeholder="账号"  data-key="login_name" bindinput="bindInputChange"></input>
    </view>
  </view>
  <view class="login_input flexRowBetween">
    <view class="input_img">
      <image src="/images/login2.png"></image>
    </view>
     <view class="input_in">
      <input placeholder="密码" type="password" data-key="password" bindinput="bindInputChange"></input>
    </view>

  </view>
</view>
<form bindsubmit="submit" report-submit="true">
  <button form-type="submit" class="submit_info" style="width:60%;margin:160rpx auto 0 auto;height:88rpx;line-height:88rpx;border-radius: 50rpx;" bindtap="submit">登录</button>
</form>
