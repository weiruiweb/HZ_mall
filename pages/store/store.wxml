        </view>
        <view class="next_page">
            <image src="/images/next_page.jpg"></image>
        </view>
    </view>
    <view class="user_infor flexRowBetween w710"  bindtap="intoPath" data-path="/pages/oneStoreProduct/oneStoreProduct">
