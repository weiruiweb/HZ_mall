<!--manageAddress.wxml-->
<view class="order_sort flexRowBetween">
	<view class="order_item {{num ==0?'order_this':''}}" data-num="0" bindtap="menuClick">
		全部
	</view>
	<view class="order_item {{num ==1?'order_this':''}}" data-num="1"  bindtap="menuClick">
		待付款
	</view>
	<view class="order_item {{num ==2?'order_this':''}}" data-num="2" bindtap="menuClick">
		待服务
	</view>
	<view class="order_item {{num ==3?'order_this':''}}" data-num="3" bindtap="menuClick">
		服务中
	</view>
	<view class="order_item {{num ==4?'order_this':''}}" data-num="4" bindtap="menuClick">
		待评价
	</view>
</view>
<view class="order_list">
	<view class="order_all">	
			<view class="order_tlt flexRowBetween">
				<view class="tlt_left">
					<text >交易时间:</text>
					<text>{{item.create_time}}</text>
				</view>
				<view class="tlt_right color" >
	            等待卖家发货
		        </view>
			</view>
			
				<view class="same_stroe">
					<view class="flexRowBetween orderlistShow" >
						<view class="all_select" style="width:8%;text-align:left;overflow:hidden;">
							<image src="/images/select.png"></image>
						</view>
						<view class="order_left"><image src="/images/index1.png"></image></view>
						<view class="order_name">
							<view class="text1" style="height:30%">商品名称</view >
							<view class="order_type avoidOverflow" style="height:40%">
								<text style="font-size:28rpx;color:#808080">描述描述描述描述描述描述</text></view>
							<view class="orders flexRowBetween" style="height:30%">
								<text class="order_number">X4</text>
								<text class="font32 color">¥544</text>
							</view>
						</view>
					</view>
				</view>


			<view class="handle">
				<view class="handle_order">
					<view class="flexRowBetween">
						<view class="handle_orders delete_order" bindtap='deleteOrder'>删除订单</view>

						<view class="handle_orders delete_order">去支付</view>

					</view>
				</view>
			</view>
	</view>	
	<view class="order_all">	
			<view class="order_tlt flexRowBetween">
				<view class="tlt_left">
					<text >交易时间:</text>
					<text>{{item.create_time}}</text>
				</view>
				<view class="tlt_right color" >
	            等待卖家发货
		        </view>
			</view>
			
				<view class="same_stroe">
					<view class="flexRowBetween orderlistShow" >
						<view class="all_select" style="width:8%;text-align:left;overflow:hidden;">
							<image src="/images/select.png"></image>
						</view>
						<view class="order_left"><image src="/images/index1.png"></image></view>
						<view class="order_name">
							<view class="text1" style="height:30%">商品名称</view >
							<view class="order_type avoidOverflow" style="height:40%">
								<text style="font-size:28rpx;color:#808080">描述描述描述描述描述描述</text></view>
							<view class="orders flexRowBetween" style="height:30%">
								<text class="order_number">X4</text>
								<text class="font32 color">¥544</text>
							</view>
						</view>
					</view>
				</view>


			<view class="handle">
				<view class="handle_order">
					<view class="flexRowBetween">
						<view class="handle_orders delete_order">删除订单</view>

						<view class="handle_orders delete_order" bindtap='intoPath' data-path="/pages/userOrderComment/userOrderComment">去评价</view>

					</view>
				</view>
			</view>
	</view>	
</view>

