	height:78rpx;
}
.tab{
	height:100rpx;
	background:#fff;
}
.tab_item{
	width:50%;
	text-align:center;
	height:100rpx;
	line-height:100rpx;
}
.tab_this{
	color:#e23830;
	border-bottom:solid 1px #e23830;
}
.product_des{
	margin-top:20rpx;
}
.sort_cont{
	width:100%;
	height:128rpx;
	
}
.sort_left{
	width:72%;
	height:128rpx;
}
.sort_right{
	width:28%;
	height:128rpx;
}
.sort_in{
	width:100%;
	height:120rpx;
	margin:0 auto;
	border-radius:10rpx;
}
.sort_img{
	width:20%;
	display:flex;
	align-items:center;
}
.sort_img image{
	width:84rpx;
	height:84rpx;
	border-radius:10rpx;
}
.sort_txt{
	width:80%;
}
.sort_txt text{
	font-size:50rpx;
}
.submit_info{
	width:110rpx;
	height:48rpx;
	line-height:48rpx;
	font-size:24rpx;
}
.sort_cont{
	margin-top:20rpx;
}
.sort_txt .text1{
	height:40%;
}
.sort_txt .text2{
	height:30%;
}
.sort_txt .text3{
	height:30%;
}
.recommend_scroll_x_box {
  height: 200rpx;
  white-space: nowrap;
  display: flex;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.recommend_hot_box {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  display: inline-block;
}

.recommend_hot_image {
  width: 200rpx;
  height: 200rpx;
}