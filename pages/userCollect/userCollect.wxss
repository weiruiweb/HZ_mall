@import "../../wxParse/wxParse.wxss"
page{
	background: #f2f2f2;
}
.recoment,.store{
	margin-top: 20rpx;
}
.product{
	width:100%;
	height:274rpx;
	background:#fff;
	border-bottom: solid 1px #e0e0e0;
}
.product_cont{
	width:100%;
	height:238rpx;

}
.product_detail{
	width:94%;
	height:200rpx;
}
.product_left{
	width:38%;
	height:100%;
}
.product_left image{
	width:238rpx;
	height:238rpx;
}
.product_right{
	width:62%;
	height:100%;

}
.product_price{
	width:100%;
}
.test{
	height:100%;
	display:flex;
	flex-flow: row wrap;
	align-content:space-between;
}
.product_top{
	width:100%;
	height: 50%;
}
.product_name{
	width:60%
}
.product_date{
	width:40%;
